{
  "name": "fraud",
  "version": "0.5.0",
  "main": "index.ts",
  "repository": "https://github.com/AnandChowdhary/fraud",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prettier": "onchange '*.ts' -- prettier --write {{changed}}",
    "start": "onchange '*.ts' -- yarn build",
    "demo": "yarn build && nodemon --watch dist dist/demo.js",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-without-coverage": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.4",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tsc": "^1.20150623.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
